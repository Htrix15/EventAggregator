{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MessageBroker": {
    "Settings": {
      "BootstrapServers": "localhost:9092",
      "Client": "KassirApi"
    },
    "Consumers": {
      "StartShowAggregation": {
        "Topic": "StartShowAggregation",
        "Group": "KassirApi",
        "ChannelConfiguration": {
          "Unbounded": false,
          "FullMode": "Wait",
          "Capacity": 10
        }
      },
      "BreakShowAggregation": {
        "Topic": "BreakShowAggregation",
        "Group": "KassirApi",
        "ChannelConfiguration": {
          "Unbounded": true
        }
      }
    },
    "Producers": {
      "SearchShowStarted": {
        "EnableIdempotence": false,
        "MessageSendMaxRetries": 3,
        "RetryBackoffMs": 100,
        "CheckSending": true,
        "FlushTimeoutMs": 10000
      },
      "ReturnShowList": {
        "EnableIdempotence": false,
        "MessageSendMaxRetries": 3,
        "RetryBackoffMs": 100,
        "CheckSending": true,
        "FlushTimeoutMs": 10000
      }
    }
  }
}
